<div class="header">
  <div class="icon">
    <%= image_tag('pomodoro.png')%>
  </div>
  <header class= "title">Pomodora</header>
  <div class="menu-item1">
    <h3 id="about-pomodoro" class="menu-item">What's a Pomodora?</h3>
      <h3 id="about-title" class="menu-item">About</h3>
  </div>
</div>
<h2 class="primary-text"> What can you do in:</h2>



<div class="pomodoro-main-content">
  <div id="login-content">
    <h2 id="account"> Login</h2>
    <hr> </hr>
    <div class="social-wrap a"><button id="facebook">Sign in with Facebook</button></div>
    <h2 id="or"> Or </h2>
    <hr id ="email-hr"></hr>

    <div id="login-form"> <%= render 'sessions/login' %></div>
  </div>
  <div class="signup-content">
    <h2 id="account">  Create your Account </h2>
    <hr> </hr>
    <div class="social-wrap a"><button id="facebook"><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
    </button>
    </div>
    <div id="signup-form"> <%= render 'sign_up' %> </div>
    <h4 class ="member"> Already a member? <a href><a href ="#" id="login-partial">login</a> </h4>
  </div>
  <div class="primary-content">
    <div class="time-buttons time-buttons-structure">
      <button type="button" class="five pomodoro-choices "><h4> 5 minutes</h4> </button>
       <button type="button" class="ten pomodoro-choices "><h4> 10 minutes</h4> </button>
       <button type="button" class="twenty-five pomodoro-choices "><h4>Pomodora</h4></button>
    </div>
    <h3 id="countdown">25:00</h3>
    <div id = "pomodoroCounter"><h2 id="pomodoroCountertext"> <% if @user  %>
      <%= @user.pomodoro %>  <% else %> 0
        0<% end %></h2> </div>
    <form id ="user-input">
      <input id="textbox" type="text" name="todo"  placeholder="ex ~ Finish Reading Chapter 2">
    </form>
    <div class="answer-buttons">
      <button id="start" class="button-style" type ="button">Start</button>
      <button id="yes" class="button-style" type ="button">Yes </button>
      <button id ="no" class="button-style" type="button"> No </button>
    </div>
  </div>
</div>
</div>

<div class="footer-container black-footer-styling">
  <h4 class="progress-bar-title"> </h4>

  <div class="adjust-bottom">
    <div class="progressBar progressBar-styling" id="max22">
      <div id="attribute"></div>
    </div>
    <div class="progress-display">
      <div id ="image-icon">
          <%= image_tag('image-icon.png') %>
      </div>
        <p id="newsfeed">Megan ~ read book for class</p>
    </div>
  </div>
</div>
